<!DOCTYPE html>
<html>
  <head>
    <title>Travelatr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if flash[:errors] %>
  <ul>
      <%  flash[:errors].each do |error| %>
      <li>
        <%= error %>
      </li>
      <% end %>
  </ul>
  <% end %>

    <%= yield %>

  </body>
</html>
